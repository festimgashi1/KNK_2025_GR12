<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AddFlightController">

    <!-- Sidebar -->
    <left>
        <fx:include source="Airline_Dash.fxml"/>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="15" alignment="TOP_LEFT">
            <padding>
                <Insets top="20" left="30" right="30" bottom="20"/>
            </padding>
            <children>
                <Label text="Add New Flight" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="75"/>
                    </columnConstraints>

                    <children>
                        <Label text="Flight Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtFlightNumber" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Airline ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtAirlineId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Plane ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtPlaneId" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Departure Airport:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtDepartureAirport" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Arrival Airport:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtArrivalAirport" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Departure Time:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtDepartureTime" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <Label text="Arrival Time:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtArrivalTime" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                        <Label text="Duration:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtDuration" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                        <Label text="Status:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtStatus" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                        <Button text="Submit" onAction="#handleSubmit"
                                GridPane.rowIndex="9" GridPane.columnIndex="1" maxWidth="100"/>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </center>
</BorderPane>
