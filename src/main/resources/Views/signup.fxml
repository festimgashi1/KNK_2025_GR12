<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="rootPane"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.CostumerSignUpController">

   <!-- Background image fullscreen -->
   <AnchorPane>
      <ImageView fx:id="bgImageView"
                 preserveRatio="false"
                 AnchorPane.topAnchor="0.0"
                 AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0">
         <image>
            <Image url="@../Photos/login_signup_pic.png"/>
         </image>
      </ImageView>
   </AnchorPane>

   <!-- Centered Sign-Up Box -->
   <VBox alignment="CENTER">
      <Pane maxWidth="460" maxHeight="600" prefWidth="440" prefHeight="580"
            style="-fx-background-color: rgba(255,255,255,0.94); -fx-background-radius: 18;">
         <VBox alignment="TOP_CENTER" spacing="14">
            <padding>
               <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <!-- Title & Switch -->
            <HBox alignment="CENTER_LEFT" spacing="10">
               <Label text="Create an account"
                      style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               <Region HBox.hgrow="ALWAYS"/>
               <Button text="Airline" onAction="#goAirline"
                       style="-fx-background-color: #e0e1da; -fx-text-fill: #757474; -fx-background-radius: 10;"
                       prefHeight="25"/>
               <Button text="Costumer" onAction="#goSignUp"
                       style="-fx-background-color: #e0e1da; -fx-text-fill: #757474; -fx-background-radius: 10;"
                       prefHeight="25"/>
            </HBox>

            <TextField fx:id="txtFirstName" promptText="First Name"
                       style="-fx-background-radius: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ccc;"
                       prefHeight="30" prefWidth="280"/>
            <TextField fx:id="txtLastName" promptText="Last Name"
                       style="-fx-background-radius: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ccc;"
                       prefHeight="30" prefWidth="280"/>
            <TextField fx:id="txtEmail" promptText="Email"
                       style="-fx-background-radius: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ccc;"
                       prefHeight="30" prefWidth="280"/>
            <TextField fx:id="txtAddress" promptText="Address"
                       style="-fx-background-radius: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ccc;"
                       prefHeight="30" prefWidth="280"/>
            <TextField fx:id="txtPhoneNumber" promptText="Phone Number"
                       style="-fx-background-radius: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ccc;"
                       prefHeight="30" prefWidth="280"/>
            <DatePicker fx:id="dtBirthDate" promptText="Date of Birth"
                        style="-fx-background-radius: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ccc;"
                        prefHeight="30" prefWidth="280"/>
            <PasswordField fx:id="pwdPassword" promptText="Password"
                           style="-fx-background-radius: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ccc;"
                           prefHeight="30" prefWidth="280"/>
            <PasswordField fx:id="pwdConfirmPass" promptText="Confirm Password"
                           style="-fx-background-radius: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ccc;"
                           prefHeight="30" prefWidth="280"/>

            <!-- Error -->
            <Label fx:id="errorLabel" text=""
                   textFill="#e74c3c" style="-fx-font-size: 12px; -fx-font-weight: bold;" prefWidth="280"/>

            <!-- Submit -->
            <Button text="SIGN UP" onAction="#handleSignUpButton"
                    style="-fx-background-color: #0a0b12; -fx-text-fill: white; -fx-background-radius: 10;"
                    prefHeight="40" prefWidth="200">
               <effect>
                  <DropShadow/>
               </effect>
            </Button>

            <!-- Log In -->
            <HBox alignment="CENTER" spacing="5">
               <Label text="If you already have an account,"/>
               <Hyperlink text="Log In" onAction="#goLogIn"/>
            </HBox>
         </VBox>
      </Pane>
   </VBox>
</StackPane>

