<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="rootPane"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.CostumerSignUpController">

   <AnchorPane>
      <ImageView fx:id="bgImageView"
                 preserveRatio="false"
                 AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <image>
            <Image url="@../Photos/login_signup_pic.png"/>
         </image>
      </ImageView>
   </AnchorPane>

   <VBox alignment="CENTER">
      <Pane maxWidth="460" maxHeight="640" prefWidth="440" prefHeight="610"
            style="-fx-background-color: rgba(255,255,255,0.94); -fx-background-radius: 18;">
         <VBox alignment="TOP_CENTER" spacing="14">
            <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

            <fx:include source="language_selector.fxml"/>

            <HBox alignment="CENTER_LEFT" spacing="10">
               <Label fx:id="lblTitle"
                      style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               <Region HBox.hgrow="ALWAYS"/>
               <Button fx:id="btnAirline" onAction="#goAirline"
                       style="-fx-background-color: #e0e1da; -fx-text-fill: #757474; -fx-background-radius: 10;" prefHeight="25"/>
               <Button fx:id="btnCostumer" onAction="#goSignUp"
                       style="-fx-background-color: #e0e1da; -fx-text-fill: #757474; -fx-background-radius: 10;" prefHeight="25"/>
            </HBox>

            <TextField fx:id="txtFirstName" prefHeight="30" prefWidth="280"/>
            <TextField fx:id="txtLastName" prefHeight="30" prefWidth="280"/>
            <TextField fx:id="txtEmail" prefHeight="30" prefWidth="280"/>
            <TextField fx:id="txtAddress" prefHeight="30" prefWidth="280"/>
            <TextField fx:id="txtPhoneNumber" prefHeight="30" prefWidth="280"/>
            <DatePicker fx:id="dtBirthDate" prefHeight="30" prefWidth="280"/>
            <PasswordField fx:id="pwdPassword" prefHeight="30" prefWidth="280"/>
            <PasswordField fx:id="pwdConfirmPass" prefHeight="30" prefWidth="280"/>

            <Label fx:id="errorLabel" textFill="#e74c3c"
                   style="-fx-font-size: 12px; -fx-font-weight: bold;" prefWidth="280"/>

            <Button fx:id="btnSignUp" onAction="#handleSignUpButton"
                    style="-fx-background-color: #0a0b12; -fx-text-fill: white; -fx-background-radius: 10;"
                    prefHeight="40" prefWidth="200">
               <effect><DropShadow/></effect>
            </Button>

            <HBox alignment="CENTER" spacing="5">
               <Label fx:id="lblAlreadyAccount"/>
               <Hyperlink fx:id="linkLogIn" onAction="#goLogIn"/>
            </HBox>
         </VBox>
      </Pane>
   </VBox>
</StackPane>

