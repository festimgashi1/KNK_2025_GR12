<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AdminDashboardController">
    <left>
        <VBox spacing="10.0" style="-fx-background-color: #2C3E50;" alignment="TOP_CENTER" prefWidth="200">
            <children>
                <Label text="Admin Panel" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 20 0 20 0;" />
                <Button text="Statistics" onAction="#showStatistics" maxWidth="180"/>
                <Button text="Flights" onAction="#showFlights" maxWidth="180"/>
                <Button text="Airlines" onAction="#showAirlines" maxWidth="180"/>
                <Button text="Profile" onAction="#goLogIn" maxWidth="180"/>
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" />
    </center>
</BorderPane>
