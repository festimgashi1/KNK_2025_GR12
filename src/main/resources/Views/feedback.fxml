<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<AnchorPane prefHeight="507.0" prefWidth="932.0"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="controller.FeedbackController">

   <children>


      <ImageView fitHeight="434.0" fitWidth="932.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Photos/feedback.jpg" />
         </image>
      </ImageView>


      <Label layoutX="166.0" layoutY="60.0" prefHeight="148.0" prefWidth="484.0"
             text="How was your airport check-in experience?" textFill="WHITE">
         <font><Font name="System Italic" size="22.0" /></font>
      </Label>


      <ToggleButton fx:id="btnVeryGood" layoutX="46.0" layoutY="345.0" prefHeight="54.0" prefWidth="126.0"
                    text="VERY GOOD" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-text-fill: #333;">
         <effect><DropShadow /></effect>
      </ToggleButton>

      <ToggleButton fx:id="btnGood" layoutX="212.0" layoutY="345.0" prefHeight="54.0" prefWidth="126.0"
                    text="GOOD" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-text-fill: #333;">
         <effect><DropShadow /></effect>
      </ToggleButton>

      <ToggleButton fx:id="btnSomewhatGood" layoutX="386.0" layoutY="345.0" prefHeight="54.0" prefWidth="137.0"
                    text="SOMEWHAT GOOD" style="-fx-background-radius: 20; -fx-border-radius: 20;">
         <effect><DropShadow /></effect>
      </ToggleButton>

      <ToggleButton fx:id="btnBad" layoutX="572.0" layoutY="345.0" prefHeight="54.0" prefWidth="126.0"
                    text="BAD" style="-fx-background-radius: 20; -fx-border-radius: 20;">
         <effect><DropShadow /></effect>
      </ToggleButton>

      <ToggleButton fx:id="btnVeryBad" layoutX="748.0" layoutY="345.0" prefHeight="54.0" prefWidth="126.0"
                    text="VERY BAD" style="-fx-background-radius: 20; -fx-border-radius: 20;">
         <effect><DropShadow /></effect>
      </ToggleButton>


      <TextField fx:id="txtComment" layoutX="165.0" layoutY="437.0" prefHeight="54.0" prefWidth="518.0"
                 promptText="Leave a feedback!" style="-fx-border-color: grey; -fx-padding: 10;" />


      <Button fx:id="btnSend" layoutX="772.0" layoutY="443.0" prefHeight="41.0" prefWidth="103.0"
              text="SEND" textFill="WHITE" onAction="#handleSendFeedback"
              style="-fx-background-radius: 30; -fx-background-color: black;">
         <effect><DropShadow /></effect>
      </Button>

   </children>
</AnchorPane>
