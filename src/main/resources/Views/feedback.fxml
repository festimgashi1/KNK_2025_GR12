<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.FeedbackController"
            prefWidth="900" prefHeight="500">

    <left>
        <fx:include source="customer_navbar.fxml" />
    </left>

    <center>
        <AnchorPane prefWidth="800" prefHeight="500">
            <children>
                <!-- Background Image -->
                <ImageView fitHeight="434.0" fitWidth="932.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Photos/feedback.jpg" />
                    </image>
                </ImageView>

                <!-- Feedback Question -->
                <Label layoutX="166.0" layoutY="60.0" prefHeight="148.0" prefWidth="484.0"
                       text="How was your airport check-in experience?" textFill="WHITE">
                    <font>
                        <Font name="System Italic" size="22.0" />
                    </font>
                </Label>

                <!-- Rating Buttons -->
                <ToggleButton fx:id="btnVeryGood" layoutX="46.0" layoutY="345.0" prefHeight="54.0" prefWidth="126.0"
                              text="VERY GOOD" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-text-fill: #333;">
                    <effect>
                        <DropShadow />
                    </effect>
                </ToggleButton>

                <ToggleButton fx:id="btnGood" layoutX="182.0" layoutY="345.0" prefHeight="54.0" prefWidth="126.0"
                              text="GOOD" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-text-fill: #333;">
                    <effect>
                        <DropShadow />
                    </effect>
                </ToggleButton>

                <ToggleButton fx:id="btnSomewhatGood" layoutX="318.0" layoutY="345.0" prefHeight="54.0" prefWidth="137.0"
                              text="SOMEWHAT GOOD" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                    <effect>
                        <DropShadow />
                    </effect>
                </ToggleButton>

                <ToggleButton fx:id="btnBad" layoutX="465.0" layoutY="345.0" prefHeight="54.0" prefWidth="126.0"
                              text="BAD" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                    <effect>
                        <DropShadow />
                    </effect>
                </ToggleButton>

                <ToggleButton fx:id="btnVeryBad" layoutX="601.0" layoutY="345.0" prefHeight="54.0" prefWidth="126.0"
                              text="VERY BAD" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                    <effect>
                        <DropShadow />
                    </effect>
                </ToggleButton>

                <!-- Comment Box -->
                <TextField fx:id="txtComment" layoutX="165.0" layoutY="420.0" prefHeight="54.0" prefWidth="518.0"
                           promptText="Leave a feedback!" style="-fx-border-color: grey; -fx-padding: 10;" />

                <!-- Send Button -->
                <Button fx:id="btnSend" layoutX="700.0" layoutY="425.0" prefHeight="41.0" prefWidth="103.0"
                        text="SEND" textFill="WHITE" onAction="#handleSendFeedback"
                        style="-fx-background-radius: 30; -fx-background-color: black;">
                    <effect>
                        <DropShadow />
                    </effect>
                </Button>
            </children>
        </AnchorPane>
    </center>
</BorderPane>