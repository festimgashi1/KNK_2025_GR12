<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.CustomerFlightBoardController"
      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #dcdcdc;"
      maxWidth="650">

    <!-- Filter Buttons -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Display:" textFill="#a97a13">
            <font>
                <Font size="21.0"/>
            </font>
        </Label>
        <Button text="Today" prefHeight="27" prefWidth="82"
                onAction="#showToday"
                style="-fx-background-color: #ADD8E6; -fx-border-color: white;"/>
        <Button text="All Flights" prefHeight="27" prefWidth="86"
                onAction="#showAllFlights"
                style="-fx-background-color: #ADD8E6; -fx-border-color: white;"/>
    </HBox>

    <!-- ARRIVALS -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="ARRIVALS ✈" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2b5797;" />
        <TableView fx:id="tableViewArrivals" prefHeight="220" prefWidth="600">
            <columns>
                <TableColumn fx:id="colStaArrivals" text="Sta."/>
                <TableColumn fx:id="colEstArrivals" text="Est."/>
                <TableColumn fx:id="colFlightArrivals" text="Flight"/>
                <TableColumn fx:id="colFromArrivals" text="From"/>
                <TableColumn fx:id="colStatusArrivals" text="Status"/>
            </columns>
        </TableView>
    </VBox>

    <Separator/>

    <!-- DEPARTURES -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="DEPARTURES ✈" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2b5797;" />
        <TableView fx:id="tableViewDepartures" prefHeight="220" prefWidth="600">
            <columns>
                <TableColumn fx:id="colStaDepartures" text="Sta."/>
                <TableColumn fx:id="colEstDepartures" text="Est."/>
                <TableColumn fx:id="colFlightDepartures" text="Flight"/>
                <TableColumn fx:id="colToDepartures" text="To"/>
                <TableColumn fx:id="colStatusDepartures" text="Status"/>
            </columns>
        </TableView>
    </VBox>
</VBox>


