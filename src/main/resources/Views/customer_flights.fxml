<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="180.0" prefWidth="850.0" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="controller.CostumerFlightsController">
    <children>

        <!-- Toggle Group for One Way / Return -->
        <HBox layoutX="20" layoutY="20" spacing="10">
            <RadioButton fx:id="returnRadio" text="Return" toggleGroup="$tripTypeGroup"/>
            <RadioButton fx:id="oneWayRadio" text="One way" selected="true" toggleGroup="$tripTypeGroup"/>
        </HBox>

        <!-- Labels and Input Fields -->
        <HBox layoutX="20" layoutY="60" spacing="10">

            <!-- Departure -->
            <VBox spacing="5">
                <Label text="Departure"/>
                <TextField fx:id="txtDeparture" prefHeight="26.0" prefWidth="158.0"/>
            </VBox>

            <!-- Destination -->
            <VBox spacing="5">
                <Label text="Destination"/>
                <TextField fx:id="txtDestination" prefHeight="26.0" prefWidth="140.0"/>
            </VBox>

            <!-- Departure Date -->
            <VBox spacing="5">
                <Label text="Departure date"/>
                <DatePicker fx:id="dpDepartureDate" prefWidth="150"/>
            </VBox>

            <!-- Return Date -->
            <VBox spacing="5">
                <Label text="Return date"/>
                <DatePicker fx:id="dpReturnDate" prefWidth="150"/>
            </VBox>

            <!-- Passengers -->
            <VBox spacing="5">
                <Label text="Passengers"/>
                <HBox spacing="5">
                    <Text fx:id="passengerText" text="1"/>
                    <Button fx:id="btnAddPassenger" text="+" onAction="#increasePassengerCount"/>
                </HBox>
            </VBox>
        </HBox>

        <!-- Search Button -->
        <Button fx:id="btnSearch" layoutX="757.0" layoutY="120.0" prefWidth="50"
                style="-fx-background-color: #e5007d; -fx-text-fill: white;" text="ðŸ”" onAction="#handleSearchClick"/>

    </children>
</AnchorPane>
